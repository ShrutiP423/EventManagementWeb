<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dream Stories</title>
    <link rel="icon" type="image-icon" href="images/logo.ico">
    <style>
        form {
            margin: 0 auto;
            padding: 0;
            font-size: 1.5em;
            width: 90%;
        }

        .pcontainer {
            border: 0.1em solid #030a24;
            background-color: #AEC0C9;
            box-shadow: 2px 2px 5px rgb(62, 61, 61);
            padding: 2em;
            margin: 1em auto;

        }

        .AddPkg {
            width: 800px;

        }

        .AddPkg form {
            opacity: 1;
        }

        .AddPkg .aphead {
            text-align: center;
            margin-bottom: 1em;
        }

        .AddPkg .apbasic {
            padding: 1em 2em 0.5em;
            font-size: 1em;
        }

        .AddPkg .AddItembtn {
            padding: 2px;
            background: #AEC0C9;
            margin: 2px;
            margin-bottom: 8px;
            border: 1px solid #27657bc5;
            box-shadow: 1px 1px 3px #27657bc5;
            font-size: 0.8em;
            border-radius: 5px;
        }

        .AddPkg .bItemList,
        .AddPkg .pItemList,
        .AddPkg .uItemList {
            display: flex;
            margin: 4px;
            padding: 2px;
            flex-direction: row;
            justify-content: space-between;
        }

        .AddPkg .pDesList,
        .AddPkg .bDesList,
        .AddPkg .uDesList {
            display: flex;
            flex-direction: column;
            padding: 2px;
            margin: 2px;
        }

        .AddPkg .bDesLists,
        .AddPkg .pDesLists,
        .AddPkg .uDesLists {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
        }

        .AddPkg .apsubmit {
            text-align: center;
        }

        .AddPkg .apsubmit button {
            background-color: #fff;
            border: 1px solid #27657bc5;
        }

        .AddPkg .bdesDetails,
        .AddPkg .pdesDetails,
        .AddPkg .udesDetails {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            margin-top: 2px;
        }

        .AddPkg .bdesDetails button,
        .AddPkg .pdesDetails button,
        .AddPkg .udesDetails button {
            padding: 2px;
            background: #AEC0C9;
            margin: 2px;
            font-size: 0.9em;
            width: 1.2em;
            border: 1px solid #27657bc5;
            box-shadow: 1px 1px 5px #27657bc5;
        }

        .AddPkg .aptotprice {
            margin: 0.2em 0;
            padding: 0.2em 0;
            display: flex;
            flex-direction: row;
            justify-content: space-around;

        }

        .AddPkg .appkghead {
            text-align: center;
            margin-bottom: 5px;
            font-size: 1.4em;
        }

        .AddPkg input {
            border: 1px solid transparent;
            border-radius: 5px;
            box-shadow: 1px 1px 2px lightslategray;
        }

        .ePkg {
            font-size: 1.3em;
            margin-bottom: 10px;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>

<body>


    <div class="pcontainer AddPkg">
        <div class="conatainer">
            <div class="row aphead">
                <h1>Edit package</h1>
            </div>
        </div>


        <form action="" enctype="multipart/form-data" method="post">

            <div class="apbasic">
                <div class=" appkghead" style="text-align: center;">BASIC</div>
                <div class="row ">
                    <div class="col">ITEMS</div>
                </div>
                <div class="row ">
                    <div class="col ">
                        <%if(packages.bItemList !='' ){%>
                            <%packages.bItemList.forEach(bItemList=>{%>
                                <label for="">
                                    <input type="text" name="" id="" value="<%=bItemList.basicItem%>"
                                        placeholder="Enter the item here">
                                
                                    <input type="text" name="" id="" value="<%=bItemList.basicPrice%>"
                                        placeholder="Enter the price">
                                </label>
                                <%})%>
                                    <%}%>
                    </div>
                </div>
                <div class="row ">
                    <div class="col"><button type="button" class="AddItembtn" id="AddItembtnB">+ Add items</button>
                    </div>
                </div>
                <div class="row bItemLists">
                    <div class="col bItemList">
                        <input type="text" name="basicItem" id="form-apitem" placeholder="Enter the item here">
                        <input type="text" name="basicPrice" id="form-adprice" placeholder="Enter the price">
                    </div>
                </div>


                <div class="row">
                    <div class="col">DESCRIPTION</div>
                </div>
                <div class="row">
                    <div class="row ">
                        <div class="col ">
                            <%if(packages.bDesList !='' ){%>
                                <%packages.bDesList.forEach(bDesList=>{%>
                                    <label for="">
                                        <input type="text" name="" id="" value="<%=bDesList.basicDesTitle%>"
                                            placeholder="Write the title of list for description.">
                                    </label>
                                    <label class="bdesDetails">
                                        <textarea style="width: 95%; scroll-behavior: auto;" ><%=bDesList.basicDes%></textarea>
                                    </label>
                                    <%})%>
                                        <%}%>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col"><button type="button" class="AddItembtn" id="AddItemdesB">+ Add </button></div>
                </div>
                <div class="row">
                    <div class="row bDesLists">
                        <div class="col bDesList">
                            <input type="text" name="basicDesTitle" id=""
                                placeholder="Write the title of list for description.">
                            <label class="bdesDetails">
                                <input type="text" name="basicDes" placeholder="Describe here.">
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <hr>
            <div class="apbasic">
                <div class="appkghead">PREMIUM</div>
                <div class="row ">
                    <div class="col">ITEMS</div>
                </div>


                <div class="row ">
                    <div class="col ">
                        <%if(packages.pItemList !='' ){%>
                            <%packages.pItemList.forEach(pItemList=>{%>
                                <label for="form-apitem">
                                    <input type="text" name="" id="form-apitem" value="<%=pItemList.premiumItem%>"
                                        placeholder="Enter the item here">
                                
                                    <input type="text" name="" id="form-adprice" value="<%=pItemList.premiumPrice%>"
                                        placeholder="Enter the price">
                                </label><br>
                                <%})%>
                                    <%}%>
                    </div>
                </div>
                <div class="row ">
                    <div class="col"><button type="button" class="AddItembtn" id="AddItembtnP">+ Add items</button>
                    </div>
                </div>
                <div class="row pItemLists">
                    <div class="col pItemList">
                        <input type="text" name="premiumItem" id="form-apitem" placeholder="Enter the item here">
                        <input type="text" name="premiumPrice" id="form-adprice" placeholder="Enter the price">
                    </div>
                </div>


                <div class="row">
                    <div class="col">DESCRIPTION</div>
                </div>
                <div class="row">
                    <div class="row ">
                        <div class="col ">
                            <%if(packages.pDesList !='' ){%>
                                <%packages.pDesList.forEach(pDesList=>{%>
                                    <label for="">
                                        <input type="text" name="" id="" value="<%=pDesList.premiumDesTitle%>"
                                            placeholder="Write the title of list for description.">
                                    </label>
                                    <label class="pdesDetails">
                                        <textarea style="width: 95%; scroll-behavior: auto;" ><%=pDesList.premiumDes%></textarea>
                                    </label>
                                    <%})%>
                                        <%}%>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col"><button type="button" class="AddItembtn" id="AddItemdesP">+ Add </button></div>
                </div>
                <div class="row">
                    <div class="row pDesLists">
                        <div class="col pDesList">
                            <input type="text" name="premiumDesTitle" id=""
                                placeholder="Write the title of list for description.">
                            <label class="pdesDetails">
                                <input type="text" name="premiumDes" placeholder="Describe here.">
                            </label>

                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="apbasic">
                <div class="appkghead">ULTIMATE</div>
                <div class="row ">
                    <div class="col">ITEMS</div>
                </div>


                <div class="row ">
                    <div class="col ">
                        <%if(packages.uItemList !='' ){%>
                            <%packages.uItemList.forEach(uItemList=>{%>
                                <label for="form-apitem">
                                    <input type="text" name="" id="form-apitem" value="<%=uItemList.ultimateItem%>"
                                        placeholder="Enter the item here">
                                
                                    <input type="text" name="" id="form-adprice" value="<%=uItemList.ultimatePrice%>"
                                        placeholder="Enter the price">
                                </label><br>
                                <%})%>
                                    <%}%>
                    </div>
                </div>
                <div class="row ">
                    <div class="col"><button type="button" class="AddItembtn" id="AddItembtnU">+ Add items</button>
                    </div>
                </div>
                <div class="row uItemLists">
                    <div class="col uItemList">
                        <input type="text" name="ultimateItem" id="form-apitem" placeholder="Enter the item here">
                        <input type="text" name="ultimatePrice" id="form-adprice" placeholder="Enter the price">
                    </div>
                </div>


                <div class="row">
                    <div class="col">DESCRIPTION</div>
                </div>
                <div class="row">
                    <div class="row ">
                        <div class="col ">
                            <%if(packages.uDesList !='' ){%>
                                <%packages.uDesList.forEach(uDesList=>{%>
                                    <label for="">
                                        <input type="text" name="" id="" value="<%=uDesList.ultimateDesTitle%>"
                                            placeholder="Write the title of list for description.">
                                    </label>
                                    <label class="udesDetails">
                                        <textarea style="width: 95%; scroll-behavior: auto;"><%=uDesList.ultimateDes%></textarea>
                                    </label><br>
                                    <%})%>
                                        <%}%>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col"><button type="button" class="AddItembtn" id="AddItemdesU">+ Add </button></div>
                </div>
                <div class="row">
                    <div class="row uDesLists">
                        <div class="col uDesList">
                            <input type="text" name="ultimateDesTitle" id=""
                                placeholder="Write the title of list for description.">
                            <label class="udesDetails">
                                <input type="text" name="ultimateDes" placeholder="Describe here.">
                            </label>

                        </div>
                    </div>
                </div>
            </div>
            <div class="apsubmit"><button type="submit">Add</button></div>
    </div>


    </form>

    </div>
    <script>
        //BASIC add item 
        let addItembtnB = document.getElementById("AddItembtnB");
        let bitemList = document.querySelectorAll(".bItemList")[0];
        let bitemLists = document.querySelector('.bItemLists');
        addItembtnB.addEventListener('click', function () {
            let newItem = bitemList.cloneNode(true);
            let input = newItem.getElementsByTagName('input')[0];
            input.value = '';
            bitemLists.appendChild(newItem);
        });

        //Baisc add description
        let AddItemdesB = document.getElementById("AddItemdesB");
        let bDesList = document.querySelectorAll(".bDesList")[0];
        let bDesLists = document.querySelector('.bDesLists');
        AddItemdesB.addEventListener('click', function () {
            let newItem = bDesList.cloneNode(true);
            let input = newItem.getElementsByTagName('input')[0];
            input.value = '';
            bDesLists.appendChild(newItem);
        });

        //Ultimate
        let addItembtnU = document.getElementById("AddItembtnU");
        let uitemList = document.querySelectorAll(".uItemList")[0];
        let uitemLists = document.querySelector('.uItemLists');
        addItembtnU.addEventListener('click', function () {
            let newItem = uitemList.cloneNode(true);
            let input = newItem.getElementsByTagName('input')[0];
            input.value = '';
            uitemLists.appendChild(newItem);
        });
        let AddItemdesU = document.getElementById("AddItemdesU");
        let uDesList = document.querySelectorAll(".uDesList")[0];
        let uDesLists = document.querySelector('.uDesLists');
        AddItemdesU.addEventListener('click', function () {
            let newItem = uDesList.cloneNode(true);
            let input = newItem.getElementsByTagName('input')[0];
            input.value = '';
            uDesLists.appendChild(newItem);
        });


        //Premium
        let addItembtnP = document.getElementById("AddItembtnP");
        let pitemList = document.querySelectorAll(".pItemList")[0];
        let pitemLists = document.querySelector('.pItemLists');
        addItembtnP.addEventListener('click', function () {
            let newItem = pitemList.cloneNode(true);
            let input = newItem.getElementsByTagName('input')[0];
            input.value = '';
            pitemLists.appendChild(newItem);
        });
        let AddItemdesP = document.getElementById("AddItemdesP");
        let pDesList = document.querySelectorAll(".pDesList")[0];
        let pDesLists = document.querySelector('.pDesLists');
        AddItemdesP.addEventListener('click', function () {
            let newItem = pDesList.cloneNode(true);
            let input = newItem.getElementsByTagName('input')[0];
            input.value = '';
            pDesLists.appendChild(newItem);
        });



    </script>
</body>

</html>